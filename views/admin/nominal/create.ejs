<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Kategori</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/category">nominal</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah nominal</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/create" method="post">
                  <div class="card-body">
                    <div class="form-group">
                        <label>Pilih Coin</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName" required>
                          <option selected="selected">Pilih Coin</option>
                          <option value="Gold">Gold</option>
                          <option value="Diamond" >Diamond</option>
                          <option value="Jewel">Jewel</option>
                        </select>
                      </div>
                    <div class="form-group">
                      <label for="coinQuantity">Jumlah Coin</label>
                      <input type="number" class="form-control" id="coinQuantity" name="coinQuantity" placeholder="Jumlah Coin" required>
                    </div>
                    <div class="form-group">
                      <label for="coinPrice">Harga</label>
                      <input type="number" class="form-control" id="coinPrice" name="coinPrice" placeholder="Jumlah Coin" required>
                    </div>
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
            <!-- /.card -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

