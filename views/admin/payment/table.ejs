<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>type</th>
      <th>Status</th>
      <th>Bank</th>
      <th>Aksi</th>
    </tr>
    </thead>
    <tbody>
      <% for(i = 0; i < payment.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= payment[i].type %></td>
          <td>
            <% if(payment[i].status === 'Y') { %>
                <span class="badge badge-success">Aktif</span>
            <% } else { %>
                <span class="badge badge-danger">Non Aktif</span>
            <% } %>
          </td>
          <td>
            <% payment[i].banks.forEach(bank => { %>
                <span class="badge badge-warning"><%= bank.nameBank %></span>
            <% }) %>
          </td>
          <td>
            <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="post">
              <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-info"><i class="fas fa-pencil-alt"></i> Ubah</a>
              <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Hapus</button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>