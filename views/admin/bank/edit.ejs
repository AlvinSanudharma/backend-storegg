<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Kategori</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">bank</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah bank</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="name">nama pemilik</label>
                      <input type="text" value="<%= bank.name %>" class="form-control" id="name" name="name" placeholder="Masukan Nama Pemilik" required>
                    </div>
                    <div class="form-group">
                      <label for="nameBank">Nama Bank</label>
                      <input type="text" value="<%= bank.nameBank %>" class="form-control" id="nameBank" name="nameBank" placeholder="Masukan Nama Bank" required>
                    </div>
                    <div class="form-group">
                      <label for="nomorRekening">Nomor Rekening</label>
                      <input type="text" value="<%= bank.nomorRekening %>" class="form-control" id="nomorRekening" name="nomorRekening" placeholder="Masukan Nomor Rekening" required>
                    </div>
                  </div>
                  <!-- /.card-body -->
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
            <!-- /.card -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <%- include ../../partials/footer.ejs %> 
